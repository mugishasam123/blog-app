<section class="user-section">
    <%= render "user" ,user:@user%>
        <div class="bio-wrapper">
            <h3 class="bio-title">Bio</h3>
            <p class="bio-text">
                <%= @user.Bio%>
            </p>
        </div>
        <ul class="most-recent-posts">
            <% @user.most_recent_posts.each do |post|%>
                <li class="post">
                    <div class="post-details">
                        <%= link_to user_post_path(@user.id,post.id) do%>
                            <h3 class="post-title">
                                Post <%=post.Title%>
                            </h3>
                            <%end%>
                                <p class="post-text">
                                    <%=post.Text%>
                                </p>
                    </div>
                    <div class="comments-likes" align="right">
                        <span>Comments:<%=post.comments.size%></span>
                        <span>Likes:<%=post.likes.size%></span>
                    </div>

                </li>
                <%end%>
        </ul>

        <button class="all-posts">
            <%= link_to user_posts_path(@user.id) do%>
                See All Posts
                <%end%>
        </button>

</section>