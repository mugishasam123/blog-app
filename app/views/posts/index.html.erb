<section class="post-index">
    <div class="user-item">
        <img class="user-photo" src="<%=@user.Photo%>" alt="<%=@user.Name%>">
        <div class="user-details">
            <a class="user-name" href="/users/<%=@user.id%>">
                <%=@user.Name%>
            </a>
            <h3 class="post-number" align="right" >
                Number of Posts:<%=@user.posts.size%>
            </h3>
            <% if @current_user && @current_user.id == @user.id%>
            <%= link_to "New post", new_user_post_path(@user.id) %>
           <% end %>
        </div>
       
    </div>

    <ul class="post-list">
        <% @user.posts.each do |post|%>
            <li class="post">
                <%= render "post" , post:post%>
            </li>
            <%end%>
    </ul>
    
</section>